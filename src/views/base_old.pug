doctype html 
html(lang="ko")
  head
    block head
      title #{pageTitle} | JunyTube 
      link(rel="stylesheet" href="https://unpkg.com/mvp.css")
  body 
    header
      if fakeUser.loggedIn  
        small Hello #{fakeUser.fakeUser}
      nav 
        ul 
          if fakeUser.loggedIn
            li 
              a(href="/logout") Log Out
          else
            li 
              a(href="/login") Login
      h1=pageTitle
    main
      block content
  include partials/footer.pug